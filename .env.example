########################################
#            SERVER CONFIG
########################################
PORT=3000
NODE_ENV=development

# Public URLs â€” update with your domains
PUBLIC_APP_URL=https://mplats.se
ADMIN_APP_URL=https://admin.mplats.se
API_BASE_URL=https://api.mplats.se/api

########################################
#            DATABASE (Prisma)
########################################
# Railway PostgreSQL connection string
DATABASE_URL="postgresql://USER:PASSWORD@HOST:PORT/railway"

########################################
#            JWT AUTH CONFIG
########################################
JWT_SECRET=replace_with_strong_secret
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=replace_with_strong_refresh_secret
REFRESH_TOKEN_EXPIRES_IN=30d

########################################
#            CLOUDINARY
########################################
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

########################################
#            EMAIL / SMTP (Optional)
########################################
SMTP_HOST=smtp.yourprovider.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASS=your-password
MAIL_FROM="Mplats <noreply@mplats.se>"

########################################
#            CORS CONFIG
########################################
# Allowed frontend domains
CORS_ORIGIN_1=http://localhost:5173
CORS_ORIGIN_2=http://localhost:9002
CORS_ORIGIN_3=https://mplats.se
CORS_ORIGIN_4=https://www.mplats.se
CORS_ORIGIN_5=https://admin.mplats.se

########################################
#            PASSWORD RESET
########################################
RESET_PASSWORD_TOKEN_EXPIRES=1h
RESET_PASSWORD_URL=https://mplats.se/auth/reset?token=

########################################
#            RATE LIMIT (Optional)
########################################
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

########################################
#            NEXT.JS FRONTEND (Admin/Public)
########################################
NEXT_PUBLIC_API_URL=https://api.mplats.se/api
NEXT_PUBLIC_WEBSITE_NAME=Mplats
NEXT_PUBLIC_ADMIN_URL=https://admin.mplats.se

########################################
#            MISC
########################################
LOG_LEVEL=info
